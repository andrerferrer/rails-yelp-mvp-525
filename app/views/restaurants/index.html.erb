<div class="container">
  <h1>Welcome to the index of restaurants</h1>

  <ul>
    <% @restaurants.each do |restaurant| %>
      <li>
        <p>
          <%= link_to restaurant.name, restaurant_path(restaurant.id) %>
        </p>
      </li>
    <% end %>
  </ul>
  
  <%= link_to "Create new restaurant", new_restaurant_path %>
</div>

